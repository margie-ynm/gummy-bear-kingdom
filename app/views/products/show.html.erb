<h1> <%= @product.name %></h1>
<div class="well">
  <h5>Country of Origin:</h5>
  <h4> <%= @product.country %> </h4>
  <h5>Cost per unit:</h5>
  <h4> $<%= @product.cost %> </h4>
</div>

<div class="well-link">
<%= link_to "Edit", edit_product_path(@product) %>
</div>
<div class="well-link">
<%= link_to "Delete", product_path(@product),
                      :data => {:confirm => "Are you sure you want to remove this product?",
                        :method => "delete"}%>
</div>
